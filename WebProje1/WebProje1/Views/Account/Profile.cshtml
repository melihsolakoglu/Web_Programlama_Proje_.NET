@model ProfileVM

@{
	ViewData["Title"] = "Profile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container rounded bg-white mt-5 mb-5">
	<div class="row">
		<div class="col-md-3 border-right">
			<form method="post" asp-action="EditProfileImg" enctype="multipart/form-data">
				<div class="d-flex flex-column align-items-center text-center p-2 py-2">					
					
					<img src="~/kullaniciImg/@Model.ProfilImg" class="img-thumbnail rounded-circle mt-3" width="120px"> 
					
														
					<span class="font-weight-bold">@Model.kullaniciAdi</span>
					<span class="text-black-50">@Model.kullaniciEmail</span>
					<label id="imgLabel" for="inputImg"><strong>Profil Fotoğrafı Seç  <i class="fa-regular fa-image"></i></strong></label>
					<span>
						<input asp-for="@Model.ProfilImg" name="inputImg" id="inputImg"  type="file" accept=".jpg" />						
					</span>
					<button class="btn btn-info btn-sm text-white mt-1" type="submit">Kaydet</button>
					<span> </span>
				</div>
			</form>
			
		</div>
		<div class="col-md-5 border-right">
			<div class="d-flex justify-content-between align-items-center mb-3">
				<h4 class="text-right">Profile Settings</h4>
				<span><a asp-action="EditProfile" asp-route-id="@ViewBag.kullaniciId" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Düzenle</a></span>
				
			</div>
			<form asp-action="Profile">
				<div class="form-outline col-6 mb-2">
					<span asp-validation-for="kullaniciAdi" class="text-warning small"></span>
					<input asp-for=" kullaniciAdi" type="text" class="form-control"
						   placeholder="" value="@Model.kullaniciAdi" disabled />
					<label class="form-label" asp-for=" kullaniciAdi">Kullanıcı Adı</label>

				</div>
				<div class="form-outline col-6 mb-2">
					<span asp-validation-for="kullaniciSoyadi" class="text-warning small"></span>
					<input asp-for=" kullaniciSoyadi" type="text" class="form-control"
						   placeholder="" value="@Model.kullaniciSoyadi" disabled />
					<label class="form-label" asp-for=" kullaniciSoyadi">Kullanıcı Soyadı</label>

				</div>


				<div class="form-outline mb-2">
					<span asp-validation-for=" Phone" class="text-warning small"></span>
					<input asp-for="Phone" type="text" class="form-control"
						   placeholder="000 000 0000" pattern="[0-9]{3} [0-9]{3} [0-9]{4}" value="@Model.Phone" disabled />
					<label class="form-label" asp-for="Phone">Telefon</label>

				</div>

				<div class="form-outline mb-2">
					<span asp-validation-for="kullaniciDogum" class="text-warning small"></span>
					<input asp-for="kullaniciDogum" type="text" class="form-control" value="@Model.kullaniciDogum" disabled />
					<label class="form-label" asp-for="kullaniciDogum">Doğum Tarihi</label>

				</div>

				<div class="form-outline mb-2">
					<span asp-validation-for=" kullaniciEmail" class="text-warning small"></span>
					<input asp-for=" kullaniciEmail" type="email" class="form-control"
						   placeholder="Email Adress" value="@Model.kullaniciEmail" disabled />
					<label class="form-label" asp-for=" kullaniciEmail">Email</label>

				</div>


			</form>
