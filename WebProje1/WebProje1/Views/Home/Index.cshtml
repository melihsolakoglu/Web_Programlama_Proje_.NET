@model List<MovieVM>
@{
    ViewData["Title"]="Ana Sayfa";
}
<link rel="stylesheet" href="/css/HomeStyle.css">

<div class="container py-5">
    <div class="dropdown text-end">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Kategoriler
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a key=3 class="dropdown-item" asp-action="GenreList" asp-route-genreId="1">Aksiyon</a>
            <a key=4 class ="dropdown-item" asp-action="GenreList" asp-route-genreId="2">Drama</a>
            <a key=5 class="dropdown-item" asp-action="GenreList" asp-route-genreId="3">Bilim Kurgu</a>
            <a key=6 class ="dropdown-item" asp-action="GenreList" asp-route-genreId="4">Komedi</a>
        </div>
    </div>

    
        @for(int i=0;i<Model.Count;i+=3)
        {
        <div class="row justify-content-center">
            <div class="col-12 col-lg-4">
                <div class="card box-shadow mx-auto my-5" style="width: 18rem;">
                    <img src="/FilmImg/@Model[i].filmImg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model[i].FilmAdi</h5>
                        <hr>
                        <p class="card-text">@Model[i].Aciklama</p>
                    </div>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,192L48,197.3C96,203,192,213,288,192C384,171,480,117,576,90.7C672,64,768,64,864,85.3C960,107,1056,149,1152,186.7C1248,224,1344,256,1392,272L1440,288L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
                    <a asp-action="MovieDetail" asp-route-id="@Model[i].Id"><i id="homeIcon" class="fa-solid fa-arrow-down-long"></i></a>
                </div>
            </div>
            @if(i+1<Model.Count){
                <div class="col-12 col-lg-4">
                    <div class="card box-shadow mx-auto my-5" style="width: 18rem;">
                        <img src="/FilmImg/@Model[i+1].filmImg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Model[i+1].FilmAdi</h5>
                            <hr>
                            <p class="card-text">@Model[i+1].Aciklama</p>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,192L48,197.3C96,203,192,213,288,192C384,171,480,117,576,90.7C672,64,768,64,864,85.3C960,107,1056,149,1152,186.7C1248,224,1344,256,1392,272L1440,288L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
                        <a href=""><i id="homeIcon" class="fa-solid fa-arrow-down-long"></i></a>
                    </div>
                </div>
            }
            @if (i + 2 < Model.Count)
            {
                <div class="col-12 col-lg-4">
                    <div class="card box-shadow mx-auto my-5" style="width: 18rem;">
                        <img src="/FilmImg/@Model[i+2].filmImg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@Model[i+2].FilmAdi</h5>
                            <hr>
                            <p class="card-text">@Model[i+2].Aciklama</p>
                        </div>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,192L48,197.3C96,203,192,213,288,192C384,171,480,117,576,90.7C672,64,768,64,864,85.3C960,107,1056,149,1152,186.7C1248,224,1344,256,1392,272L1440,288L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>
                        <a href=""><i id="homeIcon" class="fa-solid fa-arrow-down-long"></i></a>
                    </div>
                </div>
            }

        </div>
        }
</div>


